<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>
<body>
    @using SmartManager.Models.Students;
    @model IQueryable<Student>

    @{
        ViewData["Title"] = "ShowStudents";
    }
    <style>
        .btn-warning.btn-md-custom {
            background-color: #d9534f;
            color: white;
            display: flex;
            position: absolute;
            right: 90px;
            top: 33px;
        }

            .btn-warning.btn-md-custom:hover {
                background-color: #c9302c;
            }
        
        .btn-black {
            background-color: #009879;
            color: white;
            display: flex;
            position: absolute;
            right: 225px;
            top: 33px;
        }

        .btn {
            background-color: #8FBC8F;
            color: white;
        }

        #searchInput {
            position: relative;
            top: -14px; 
            left: 0px;
            font-size: 15px;
            width: 500px;
            background: #fff;
        }

        #searchInput {
            margin-bottom: -60px;
        }

        .custom-file-control.btn-md-custom {
            background-color: #007BFF;
            color: white;
        }


        .btn-edit {
            background-color: #009879;
            color: #fff;
            font-size: 16px;
        }

        .btn-delete {
            background-color: #d9534f;
            color: #fff;
            font-size: 16px;
        }

        .btn-md-custom {
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
        }

        .btn-edit,
        .btn-delete {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }

        .custom-file-input {
            display: none;
        }

        .custom-file-label {
            cursor: pointer;
        }

        .custom-file-control {
            display: flex;
            align-items: end;
        }

        * {
            font-family: sans-serif;
        }

        .table {
            border-collapse: collapse;
            margin: 25px 0;
            font-size: 0.9em;
            min-width: 400px;
            border-radius: 5px 5px 0 0;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        }

            .table thead tr {
                background-color: #009879;
                color: #ffffff;
                text-align: left;
                font-weight: bold;
            }

            .table th,
            .table td {
                padding: 12px 15px;
            }

            .table tbody tr {
                border-bottom: 1px solid #dddddd;
            }

                .table tbody tr:nth-of-type(even) {
                    background-color: #f3f3f3;
                }

                .table tbody tr:last-of-type {
                    border-bottom: 2px solid #009879;
                }

                .table tbody tr.active-row {
                    font-weight: bold;
                    color: #009879;
                }

        .student-count {
            position: absolute;
            top: 5px;
            left: 0px;
            color: #333;
            font-size: 15px;
        }


    </style>
    <div style="position: relative;">
    <div class="student-count">
        Total Students: @Model.Count()
    </div>
    </div>

    <div style="position: relative;">

        <label for="formFile" class="btn btn-warning btn-md-custom btn-black d-inline-block">
            <i class="bi bi-plus-circle"></i> &nbsp; Import
        </label>
        <form id="form" method="post" asp-action="ImportFile" enctype="multipart/form-data" class="d-inline-block">
            <input class="custom-file-input" type="file" name="formFile" id="formFile" accept=".xlsx" onchange="submitForm()" required>
        </form>

        <a asp-controller="Student" asp-action="PostStudent" class="btn btn-black d-inline-block" style="position: absolute; right: 0;">
            <i class="bi bi-plus-circle"></i> &nbsp; New
        </a>

    </div>
    <br />
        <div class="col-5">
            <input type="text" id="searchInput" class="form-control" placeholder="Search">
        </div>
        <br />

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Given name</th>
                    <th scope="col">Sur name</th>
                    <th scope="col">Phone number</th>
                    <th scope="col">Group name</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                    foreach (var item in Model)
                    {
                        <tr class="searchable-row">
                            <th scope="row">@i</th>
                            <td>@item.GivenName</td>
                            <td>@item.Surname</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.GroupName</td>
                            <td>
                                <a asp-route-studentId="@item.Id" asp-action="PutStudent" class="btn btn-success btn-md-custom btn-edit">
                                    <i class="bi bi-pencil"></i>Edit
                                </a>
                            </td>
                            <td>
                                <a asp-route-studentId="@item.Id" asp-action="DeleteStudent" class="btn btn-danger btn-md-custom btn-delete" onclick="return DeleteInput()">
                                    <i class="bi bi-x-lg"></i> Delete
                                </a>
                            </td>
                        </tr>
                        i++;
                    }
                }
            </tbody>
        </table>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function submitForm() {
            document.getElementById("form").submit();
        }

        $(document).ready(function () {
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $(".searchable-row").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });
    </script>
</body>
</html>
