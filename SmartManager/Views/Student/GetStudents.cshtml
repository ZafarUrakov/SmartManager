<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" integrity="sha384-T3+41DSEZ8OHAA2OBLRnYYpISdADlUDT2I1nMrfIIj99brEWfF+e18H3IdV92b/V" crossorigin="anonymous" />
</head>
<body>
    @using SmartManager.Models.Students;
    @model IQueryable<Student>

    @{
        ViewData["Title"] = "ShowStudents";
    }
    <style>
        .btn-md-custom {
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
        }

        .btn-edit,
        .btn-delete {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }

        .custom-file-input {
            display: none;
        }

        .custom-file-label {
            cursor: pointer;
        }

        .custom-file-control {
            display: flex;
            align-items: center;
        }
    </style>


    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-dark">Student List</h2>
                <p>Total Students: @Model.Count()</p>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Student" asp-action="PostStudent" class="btn btn-primary btn-md-custom">
                    <i class="bi bi-plus-circle"></i> &nbsp; Add New Student
                </a>
                <div class="custom-file custom-file-control">
                    <label for="formFile" class="btn btn-primary btn-md-custom">
                        <i class="bi bi-plus-circle"></i> &nbsp; Import
                    </label>
                    <form id="form" method="post" asp-action="ImportFile" enctype="multipart/form-data" class="d-inline-block">
                        <input class="custom-file-input" type="file" name="formFile" id="formFile" accept=".xlsx" onchange="submitForm()" required>
                    </form>
                </div>
            </div>
        </div>
        <br />

        <div class="row pt-3">
            <div class="col-3">
                <input type="text" id="searchInput" class="form-control" placeholder="Search">
            </div>
        </div>
        <br />

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">GivenName</th>
                    <th scope="col">Surname</th>
                    <th scope="col">PhoneNumber</th>
                    <th scope="col">GroupName</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                    foreach (var item in Model)
                    {
                        <tr class="searchable-row">
                            <th scope="row">@i</th>
                            <td>@item.GivenName</td>
                            <td>@item.Surname</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.GroupName</td>
                            <td>
                                <a asp-route-studentId="@item.Id" asp-action="PutStudent" class="btn btn-primary btn-md-custom btn-edit">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                            </td>
                            <td>
                                <a asp-route-studentId="@item.Id" asp-action="DeleteStudent" class="btn btn-danger btn-md-custom btn-delete" onclick="return DeleteInput()">
                                    <i class="bi bi-x-lg"></i> Delete
                                </a>
                            </td>
                        </tr>
                        i++;
                    }
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function submitForm() {
            document.getElementById("form").submit();
        }

        $(document).ready(function () {
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $(".searchable-row").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });
    </script>
</body>
</html>
