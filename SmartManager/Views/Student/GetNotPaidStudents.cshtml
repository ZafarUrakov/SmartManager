<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" integrity="sha384-T3+41DSEZ8OHAA2OBLRnYYpISdADlUDT2I1nMrfIIj99brEWfF+e18H3IdV92b/V" crossorigin="anonymous" />
</head>
<body>
    @using SmartManager.Models.Students;
    @model IQueryable<Student>

    @{
        ViewData["Title"] = "GetStudentWithPayment";
    }
    <style>
        .btn-md-custom {
            padding: 0.5rem 1rem;
            font-size: 1rem;
        }

        .btn-payment,
        .btn-remainder {
            padding: 0.5rem 1rem;
            font-size: 1rem;
        }

        .btn-payment {
            background-color: #28a745; /* Зеленый цвет для кнопки "Paid" */
            color: #fff;
        }

        .btn-remainder {
            background-color: #ffc107; /* Желтый цвет для кнопки "Remind" */
            color: #000;
        }

        /* Уменьшаем размер окна ввода суммы */
        .small-input {
            width: 70px;
        }
    </style>

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-dark">Student </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Student" asp-action="" class="btn btn-primary btn-md-custom">
                    <i class="bi bi-plus-circle"></i> &nbsp; Add New Student
                </a>
            </div>
        </div>
        <br />

        <div class="row pt-3">
            <div class="col-3">
                <input type="text" id="searchInput" class="form-control" placeholder="Search">
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-12">
                <p>Total Students: @Model.Count()</p>
            </div>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">GivenName</th>
                    <th scope="col">Surname</th>
                    <th scope="col">PhoneNumber</th>
                    <th scope="col">GroupName</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                    foreach (var item in Model)
                    {
                        <tr class="searchable-row">
                            <th scope="row">@i</th>
                            <td>@item.GivenName</td>
                            <td>@item.Surname</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.GroupName</td>
                            <td>
                                <!-- Обертываем input и кнопку в div с классом d-flex для стилизации -->
                                <div class="d-flex align-items-center">
                                    <!-- Уменьшаем размер окна ввода суммы и стилизуем его -->
                                    <input type="number" id="paymentAmount_@item.Id" class="form-control form-control-sm me-2 small-input" placeholder="Amount">
                                    <button class="btn btn-primary btn-md-custom btn-payment toggle-payment" data-student-id="@item.Id" data-is-paid="true">
                                        <i class="bi bi-check-circle"></i> Paid
                                    </button>
                                </div>
                            </td>
                            <td>
                                <button class="btn btn-primary btn-md-custom btn-remainder toggle-remainder" data-student-id="@item.Id" data-remainder="true">
                                    <i class="bi bi-alarm"></i> Remind
                                </button>
                            </td>
                        </tr>
                        i++;
                    }
                }
            </tbody>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $(".searchable-row").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });

            $(".toggle-payment").click(function () {
                var button = $(this);
                var studentId = button.data("student-id");
                var isPaid = button.data("is-paid");

                var paymentAmount = $("#paymentAmount_" + studentId).val();

                $.post("/Payment/UpdatePayment", { studentId: studentId, isPaid: isPaid, amount: paymentAmount }, function (data) {
                    if (data.success) {
                        if (isPaid) {
                            button.removeClass("btn-success").addClass("btn-secondary");
                        } else {
                            button.removeClass("btn-danger").addClass("btn-secondary");
                        }
                    }
                });
            });

            $(".toggle-remainder").click(function () {
                var button = $(this);
                var studentId = button.data("student-id");
                var remainder = button.data("remainder");

                $.post("/Payment/RemainderToStudents", { studentId: studentId, remainder: remainder }, function (data) {
                    if (data.success) {
                    }
                });
            });
        });
    </script>
</body>
</html>
