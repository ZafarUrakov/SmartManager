@{
    ViewData["Title"] = "Spreadsheet";
}

<style>
    .error-message {
        color: red;
        font-size: 14px;
        font-style: italic;
        margin-top: 5px;
    }
</style>



<div class="container">
    <div class="row align-items-center justify-content-center" style="height: 80vh;">
        <div class="col-md-6">
            <form method="post" asp-action="ImportFile" enctype="multipart/form-data" class="border p-3">
                <div class="mb-3">
                    <label for="formFile" class="form-label">Choose XLSX file:</label>
                    <input class="form-control" type="file" name="formFile" id="formFile" accept=".xlsx" required>
                    <div class="error-message">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Import</button>
            </form>
        </div>
    </div>
</div>
